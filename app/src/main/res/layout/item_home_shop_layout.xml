<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_goods"
    android:visibility="visible"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginRight="@dimen/x5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_shoptitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x5"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:maxWidth="@dimen/x142"
                    android:text="店铺名"
                    android:textColor="@color/text333"
                    android:textSize="@dimen/x12" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x5"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_shoptel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:maxWidth="@dimen/x142"
                        android:text="联系电话"
                        android:textColor="@color/text333"
                        android:textSize="@dimen/x12" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x5"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="区域："
                        android:textColor="@color/text999"
                        android:textSize="@dimen/x12" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/x5"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="地址："
                        android:textColor="@color/text999"
                        android:textSize="@dimen/x12" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_add"
                android:layout_width="@dimen/x78"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#FF4500"
                android:gravity="center"
                android:paddingLeft="@dimen/x5"
                android:paddingRight="@dimen/x5"
                android:text="添加"
                android:textColor="@color/bgfff"
                android:textSize="@dimen/x12" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:background="@color/bgddd"></View>

            <TextView
                android:id="@+id/tv_call"
                android:layout_width="@dimen/x78"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#3CB371"
                android:gravity="center"
                android:paddingLeft="@dimen/x5"
                android:paddingRight="@dimen/x5"
                android:text="拨打"
                android:textColor="@color/bgfff"
                android:textSize="@dimen/x12" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/bgea"></View>


</FrameLayout>
